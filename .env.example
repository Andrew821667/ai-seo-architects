# ===========================================
# AI SEO Architects Environment Variables
# ===========================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://ai_seo_user:ai_seo_password@postgres:5432/ai_seo_architects
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=ai_seo_architects
DATABASE_USER=ai_seo_user
DATABASE_PASSWORD=ai_seo_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_LOG_LEVEL=info

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# MCP (Model Context Protocol) Configuration
MCP_ENABLED=true
MCP_CACHE_TTL_MINUTES=30
MCP_TIMEOUT_SECONDS=30

# Anthropic MCP Server (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# SEO AI Models Configuration
SEO_AI_MODELS_PATH=./seo_ai_models
SEO_AI_MODELS_MOCK_MODE=false

# Monitoring & Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true

# Environment
ENVIRONMENT=development
DEBUG=false

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB
MAX_REQUEST_SIZE=20971520  # 20MB

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Input Validation
VALIDATION_ENABLED=true
VALIDATION_STRICT_MODE=false

# Session Configuration
SESSION_TIMEOUT_MINUTES=120
MAX_CONCURRENT_SESSIONS=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
STARTUP_TIMEOUT_SECONDS=60

# Vector Database Configuration
VECTOR_STORE_PATH=./data/vector_stores
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
FAISS_INDEX_PATH=./data/faiss_indexes

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=./knowledge
KNOWLEDGE_CHUNK_SIZE=500
KNOWLEDGE_CHUNK_OVERLAP=50

# Background Tasks Configuration
TASK_QUEUE_SIZE=100
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300

# Development Tools (только для development)
# PYTEST_ENABLED=true
# API_DOCS_ENABLED=true
# API_REDOC_ENABLED=true

# Production Settings (раскомментировать для production)
# ENVIRONMENT=production
# DEBUG=false
# API_DOCS_ENABLED=false
# API_REDOC_ENABLED=false
# SSL_ENABLED=true
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem